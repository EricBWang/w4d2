
<% action = (cat.persisted? ? cat_url(cat) : cats_url) %>
<% method = (cat.persisted? ? :patch : :post) %>

<form action="<%= action %>" method="post">
    <input type="hidden" name= "_method" value="<% method %>" >
    <label>Name:
        <input type="text" name="cat[name]" value="<%= cat.name %>">
    </label>

    <label>Sex:
        <input type="radio" name="cat[sex]" value="<%= cat.sex %>">
    </label>

    <label>Color:
        <select name="cat[color]">
            <option disabled selected>--select a color--</option>
            <% Cat::CAT_COLORS.each do |color| %>
                <option value="<%= color %>"><%= color.upcase %></option>
            <% end %>
        </select>
    </label>

    <label>Birth date:
        <input type="date" name="cat[birth_date]" value="<%= cat.birth_date %>">
    </label>

    <label>Description:
        <textarea name="cat[description]"><%= cat.description %></textarea>
    </label>


    <input type="submit" value="Submit">
</form>